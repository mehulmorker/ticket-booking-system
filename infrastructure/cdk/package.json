{
  "name": "ticket-booking-infrastructure",
  "version": "1.0.0",
  "description": "AWS CDK infrastructure for ticket booking microservices platform",
  "main": "bin/app.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "cdk": "cdk",
    "deploy": "cdk deploy --all --require-approval never",
    "deploy:vpc": "cdk deploy TicketBookingVpcStack",
    "deploy:databases": "cdk deploy TicketBookingDatabaseStack",
    "deploy:storage": "cdk deploy TicketBookingStorageStack",
    "deploy:ecs": "cdk deploy TicketBookingEcsStack",
    "deploy:services": "cdk deploy TicketBookingServicesStack",
    "deploy:frontend": "cdk deploy TicketBookingFrontendStack",
    "destroy": "cdk destroy --all",
    "diff": "cdk diff",
    "synth": "cdk synth",
    "bootstrap": "cdk bootstrap"
  },
  "keywords": [
    "aws-cdk",
    "infrastructure",
    "microservices",
    "ecs",
    "fargate"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "aws-cdk": "^2.110.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "aws-cdk-lib": "^2.110.0",
    "constructs": "^10.3.0",
    "source-map-support": "^0.5.21"
  }
}

